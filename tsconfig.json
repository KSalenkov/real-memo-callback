{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "sourceMap": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "noEmit": false,
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "rootDir": "./src",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
